<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dev.siniy.atmsearch.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_map"
        android:id="@+id/btnMap"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_search"
        android:id="@+id/btnSearch"
        android:layout_marginRight="20dp"
        android:layout_marginTop="42dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDangNhap"
        android:background="@drawable/btn_login"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/btnMap"
        android:layout_alignLeft="@+id/btnMap"
        android:layout_alignStart="@+id/btnMap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFavorite"
        android:enabled="false"
        android:background="@drawable/btn_favorite"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/btnMap"
        android:layout_alignRight="@+id/btnSearch"
        android:layout_alignEnd="@+id/btnSearch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvName"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLogout"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvName"
        android:src="@drawable/logout"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnInfo"
        android:background="@drawable/btn_info"
        android:visibility="gone"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/btnMap"
        android:layout_alignLeft="@+id/btnMap"
        android:layout_alignStart="@+id/btnMap" />

    <TextView
        style="@style/DashboardText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bản đồ"
        android:id="@+id/textView"
        android:layout_below="@+id/btnMap"
        android:layout_alignLeft="@+id/btnMap"
        android:layout_alignStart="@+id/btnMap"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        style="@style/DashboardText"
        android:layout_marginLeft="18dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tìm kiếm"
        android:id="@+id/textView2"
        android:layout_below="@+id/btnSearch"
        android:layout_alignLeft="@+id/btnSearch"
        android:layout_alignStart="@+id/btnSearch" />

    <TextView
        style="@style/DashboardText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yêu thích"
        android:id="@+id/textView3"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/btnFavorite"
        android:layout_alignRight="@+id/btnFavorite"
        android:layout_alignEnd="@+id/btnFavorite" />

    <TextView
        style="@style/DashboardText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Đăng nhập"
        android:id="@+id/tvLogin"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/btnMap"
        android:layout_alignStart="@+id/btnMap"
        android:layout_marginLeft="12dp"/>

</RelativeLayout>
